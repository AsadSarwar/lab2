using namespace std;

void Matrix :: input()
	{
		/*cout<<"Enter number of rows of matrix"<<endl;
		cin>>2;
		cout<<"Enter the number of coloumns of matrix"<<endl;
		cin>>2;*/
		for(int i=0; i<2; i++)
			for(int j=0; j<2; j++)
			{
				//cout<<"Enter Entry: ";
				matrixA[i][j]=1;
			}
	}

	void Matrix :: add(Matrix m1, Matrix m2)
	{
		/*if(m1.2!=m2.2 && m1.2 != m2.2)
		{
			cout<<"Addition not possible"<<endl;
			return;
		}
		else
		{*/
			//2=m1.2;
		//	2=m1.2;
			for(int i=0; i<2; i++){
				for(int j=0; j<2; j++)
				{
					matrixA[i][j]=m1.matrixA[i][j]+m2.matrixA[i][j];
				}
		}
		
		
	}
	void Matrix :: subtract(Matrix m1, Matrix m2)
	{
		/*if(m1.2!=m2.2 && m1.2 != m2.2)
		{
			cout<<"Subtraction not possible"<<endl;
			return;
		}
		else
		{*/
			//2=m1.2;
		//	2=m1.2;
			for(int i=0; i<2; i++){
				for(int j=0; j<2; j++)
				{
					matrixA[i][j]=m1.matrixA[i][j]-m2.matrixA[i][j];
				}	
		}
		
		
	}

	void Matrix :: multiply(Matrix m1,Matrix m2)
	{
		/*if(m1.2 != m2.2)
		{
			cout<<"Mutiplication is not possible"<<endl;
			return;
		}
		else
		{*/
			//2=m1.2;
		//	2=m2.2;
			for(int i=0; i<2; i++)
				for(int j=0;j<2; j++)
				{
					matrixA[i][j]=0;
					for(int k=0; k<2; k++)
					{
						matrixA[i][j]= matrixA[i][j]+(m1.matrixA[i][k]*m2.matrixA[k][j]);
					}
				}
			
			
	}

